@model WebApplication2.ViewModels.NoweOsobyViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Osoby"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.Name)
        @Html.TextBoxFor(m => m.Osoba.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.DataZag)
        @Html.TextBoxFor(m => m.Osoba.DataZag, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.GenreId)
        @Html.DropDownListFor(m => m.Osoba.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.Wiek)
        @Html.TextBoxFor(m => m.Osoba.Wiek, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.Miasto)
        @Html.TextBoxFor(m => m.Osoba.Wiek, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Osoba.Wzrost)
        @Html.TextBoxFor(m => m.Osoba.Wzrost, new { @class = "form-control" })
    </div>


    @Html.HiddenFor(m => m.Osoba.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
